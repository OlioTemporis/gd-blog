---
const { frontmatter } = Astro.props;
import BaseLayout from "./BaseLayout.astro";
---

<BaseLayout title={frontmatter.title}>
    <article class="prose lg:prose-xl mx-auto my-8">
      <h1>{frontmatter.title}</h1>
      <img src={frontmatter.image.url} width={500} alt={frontmatter.image.alt} />
      <p class="text-sm">{frontmatter.description}</p>
      <div class="tags">
            {frontmatter.tags.map((tag: string) => (
                <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
            ))}
      </div>
      <slot />
      <p class="text-sm text-right">Written by: {frontmatter.author} on {frontmatter.pubDate.toString().slice(0,10)}</p>
    </article>
</BaseLayout>

<style>
  a {
    color: #00539F;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: .5em;
    padding: .5em 1em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>